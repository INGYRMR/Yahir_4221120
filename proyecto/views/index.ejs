<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD con Node.js y MySQL</title>
    <link rel="stylesheet" href="/styles/estilo1.css">

</head>
<body>
    <h1>Lista de Usuarios</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Direccion</th>
            <th>Fecha de nacimiento</th>
            <th>Genero</th>
            <th>Acciones</th>
        </tr>
        <% users.forEach(user => { %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.nombre %></td>
            <td><%= user.apellidos %></td>
            <td><%= user.email %></td>
            <td><%= user.telefono %></td>
            <td><%= user.direccion %></td>
            <td><%= user.nacimiento %></td>
            <td><%= user.genero %></td>
        
            <td>
                <a href="/edit/<%= user.id %>">Editar</a> |
                <a href="/delete/<%= user.id %>">Eliminar</a>
                <a href="/add">Agregar</a>
            </td>
        </tr>
        <% }); %>
    </table>

    
</body>
</html>
